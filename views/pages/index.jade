extend ../layout

block content
    .container
        .row
            each item in movies
                .col-md-3
                    .thumbnail
                        a(href="/movie/#{item._id}")
                            img(src="#{item.poster}", alt="#{item.title}",style="max-height:200px;max-width:200px;")
                        .caption
                            h3 #{item.title}
                            p
                                a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看详情