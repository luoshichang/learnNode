extends  ../layout

block content
    .container
        .row
          each item in movies
                .col-md-2
                    .thumbnail
                        a(href="/movie/#{item._id}")
                          img(src="#{item.poster}",alt="#{item.title}")
                          .caption
                              h3 #{item.title}
                              p:a.bnt.bnt-primary(href="/movie/#{item._id}",role="button")
                            __     观看预告片